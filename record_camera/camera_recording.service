[Unit]
Description=Start FFmpeg recording from RTSP
After=network.target

[Service]
Type=forking
User=root
ExecStart=/root/camera_records/start_recording.sh
ExecStop=/bin/sh -c "pkill -9 ffmpeg; exit 0"
KillMode=process
RuntimeMaxSec=1800
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
